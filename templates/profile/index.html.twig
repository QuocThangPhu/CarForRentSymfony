{% extends 'base.html.twig' %}

{% block title %}Hello ProfileController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }
        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>Hello {{ user.email }} âœ…</h1>
        <form action="{{ path('logout') }}" method="post" id="form-button-logout">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('logout') }}" id="csrf-token"/>
            <input
                    class="btn btn-danger border-0 rounded-0 text-white" type="submit" id="_submit"
                    name="_submit"
                    value="Logout"
            />
        </form>
        <br/>
        <ul>
            This friendly message is coming from:
            {% if is_granted('ROLE_ADMIN') %}
                <li>Your ADMIN PAGE at <code><a href="{{ path('admin') }}">ADMIN PAGE</a></code></li>
            {% endif %}
        </ul>
    </div>
{% endblock %}
